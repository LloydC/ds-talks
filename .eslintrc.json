{
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "plugin:jest/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "jest/expect-expect": [
      "error",
      {
        "assertFunctionNames": [
          "expect",
          "validateTypeOf",
          "validateMockCalls",
          "validateInstanceOf",
          "validateNotEmptyData",
          "validateStringMatches",
          "validateToHaveProperty",
          "validateArrayContaining",
          "validateMockToHaveBeenCalledWith",
          "validateElementContainsDescendant"
        ]
      }
    ]
  }
}
